<section class="pir-section-container">
    <header class="pir-section-container-header">
        <h1>
            Select which Actors you want to run the check on
        </h1>
    </header>
    <section id="pir-container-body">
        <label>
            <input type="checkbox" data-action="toggleAll" {{#if toggleAll}}checked{{/if}}>
            Toggle All
        </label>
        <hr>
        {{#each actors}}
            <label>
                <input type="checkbox" name="pir-actors" value="{{this.actor.id}}" {{#if this.isChecked}}checked{{/if}}>
                {{this.actor.name}}
            </label><br>
        {{/each}}
    </section>
</section>